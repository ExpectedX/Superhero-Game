<html>
	<head>
	
		<link rel = "stylesheet" href = "css.css" />
		<title></title>
		
		<script src = "utilities.js"></script>
		<script>
			{
			  missionNames = [["Cat stuck in a tree", "Tree", 1], ["Group of thugs loitering", "Thugs", 2], ["Bank robbery", "Robbers", 3], ["Alien invasion", "Aliens", 5], ["Metoer hitting the earth", "Meteor", 8]];
			  
			  /********
			  help me make more missions [mission name, enemy, difficulty]
			  ********/
			  
			  missions = [];
			}
			
			function Hero(NAME)
			{
				this.name = NAME;
				
				this.health = 100;
				this.level = 1;
				this.exp = 0;
				this.skills = [];
				
				this.str = 0; //overall damage increase
					this.damage = 10 * this.str;
				this.def = 0; //take less damage
				this.con = 0; //increase health
				this.int = 0; //skill damage increase
				
				this.restoreHealth = function()
				{
					this.health = 100 + this.con * 5;
				}
				
				this.getSkill = function(SKILL)
				{
					if (this.skills.lenght < 4) //max 4 skills
						this.skills.push(SKILL);
				}
				
				this.attack = function()
				{
					return Math.floor(this.damage * getRandomInteger(8, 12) * 0.1);
				}
			}
			
			function Mission(NAME, ENEMY, DIFFICULTY)
			{
				this.name = NAME;
				this.enemy = ENEMY;
				
				this.damage = DIFFICULTY * 10;
				this.health = DIFFICULTY * getRandomInteger(24, 60);
				
				this.exp = DIFFICULTY * getRandomInteger(10, 20);
				
				this.attack = function()
				{
					return Math.floor(this.damage * getRandomInteger(8, 12) * 0.1);
				}
				
				/* this.recommendedStats = function(HERO)
				{
					if (HERO.str)
				} */
			}
			
			function generateMission()
			{
				var randMission = missionNames[getRandomInteger(0, missionNames.length - 1)];
				
				missions.push(new Mission(randMission [0], randMission [1], randMission [2]));
			}
		</script>	
	</head>
	<body onload = "initialize();">
	
	</body>
</html>
